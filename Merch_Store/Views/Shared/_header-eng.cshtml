<header class="d-flex justify-content-between align-items-center py-3 border-bottom">
    <a href="/" class="fs-3 text-decoration-none text-white">Merch Store</a>
    <div class="d-flex align-items-center gap-3">
        @{
            var currentLang = ViewData["Lang"]?.ToString() ?? "ru";
            var returnUrl = Context.Request.Path + Context.Request.QueryString;
        }
        <ul class="header-ul">
            <li class="@(currentLang == "ru" ? "active-lang" : "")">
                <a asp-controller="Language" asp-action="Set" asp-route-lang="ru" asp-route-returnUrl="@(returnUrl)">ru</a>
            </li>
            <li class="@(currentLang == "ro" ? "active-lang" : "")">
                <a asp-controller="Language" asp-action="Set" asp-route-lang="ro" asp-route-returnUrl="@(returnUrl)">ro</a>
            </li>
            <li class="@(currentLang == "eng" ? "active-lang" : "")">
                <a asp-controller="Language" asp-action="Set" asp-route-lang="eng" asp-route-returnUrl="@(returnUrl)">eng</a>
            </li>
        </ul>



        <div>
            <a href="#" class="me-2"><i class="fab fa-facebook-f"></i></a>
            <a href="#"><i class="fab fa-instagram"></i></a>
        </div>
    </div>
</header>