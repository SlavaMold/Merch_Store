@{
    Layout = null;

    // Попробуем прочитать язык из куки
    string lang = "ru"; // по умолчанию
    if (Context.Request.Cookies.ContainsKey("lang"))
    {
        lang = Context.Request.Cookies["lang"];
    }

    string GetPartial(string name) => $"~/Views/Shared/_{name}-{lang}.cshtml";
}

<!DOCTYPE html>
<html lang="@lang">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Merch Store</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Шрифты -->

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Metal+Mania&display=swap" rel="stylesheet">


    <!-- FontAwesome для иконок -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2">
                @Html.Partial(GetPartial("sidebar"))
            </div>

            <!-- Main content -->
            <main class="col-md-9 col-lg-10">
                <!-- Header -->
                @Html.Partial(GetPartial("header"))

                <!-- Content -->
                <section class="py-4">
                    @RenderBody()
                </section>

                <!-- Footer -->
                @Html.Partial(GetPartial("footer"))
            </main>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
