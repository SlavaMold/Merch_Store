@{
    ViewData["Title"] = "Main Page";
}
<div class="container product-container">
    <div class="row">

@for (int i = 1; i <= 6; i++)
{
    <div class="col-md-4 col-sm-6 d-flex justify-content-center">
        <div class="card product-card">
            <img src="@Url.Content($"~/images/pic{i}.jpg")" class="card-img front product-img" alt="good @i" />
            <img src="@Url.Content($"~/images/back{i}.jpg")" class="card-img back product-img" alt="good @i" />
            <div class="card-body text-center">
                <h5 class="card-title">Товар @i</h5>
                <p class="card-text">Описание товара @i</p>
            </div>
        </div>
    </div>

}
    </div>
</div>